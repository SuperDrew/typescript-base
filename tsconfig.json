{
    "compilerOptions": {
        "baseUrl": "./src",
        "lib": ["dom", "es2018"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}